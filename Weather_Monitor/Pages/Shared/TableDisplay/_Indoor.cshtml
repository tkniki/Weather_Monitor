@using Weather_Monitor.Models;
@model IEnumerable<WeatherData>

    <h2>Indoor data</h2>
<table class="table table-hover" style="width:100%">
    <thead>
        <tr class="table-light">
            <th>Date</th>
            <th>Temperature (°C)</th>
            <th>Humidity (%)</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr class="table-light">
                <td>@item.Date</td>
                <td>@item.InCelsius</td>
                <td>@item.Humidity</td>
            </tr>
        }
    </tbody>
</table>