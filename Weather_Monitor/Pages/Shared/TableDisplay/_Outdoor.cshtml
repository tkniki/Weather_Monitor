@using Weather_Monitor.Models;
@model IEnumerable<WeatherData>

<h2>Outdoor data</h2>
<table class="table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temperature (C°)</th>
            <th>Atmospheric pressure (hPa)</th>
            <th>Rain (mm)</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Date</td>
                <td>@item.OutCelsius</td>
                <td>@item.Pressure</td>
                <td>@item.Rain</td>
            </tr>
        }
    </tbody>
</table>