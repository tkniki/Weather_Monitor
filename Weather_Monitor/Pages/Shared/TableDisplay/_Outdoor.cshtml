@using Weather_Monitor.Models;
@model IEnumerable<WeatherData>

<h2>Outdoor data</h2>
<table class="table table-hover" style="width:100%">
    <thead>
        <tr class="table-light">
            <th>Date</th>
            <th>Temperature (°C)</th>
            <th>Atmospheric pressure (hPa)</th>
            <th>Rain (mm)</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr class="table-light">
                <td>@item.Date</td>
                <td>@item.OutCelsius</td>
                <td>@item.Pressure</td>
                <td>@item.Rain</td>
            </tr>
        }
    </tbody>
</table>